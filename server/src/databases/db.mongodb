  password: "jean123",
});

use("crud_react");
db.posts.insertOne({
  user: {
    id: 1,
    username: "Sevedol",
    email: "jean@gmail.com",
  },
  title: "node js",
  content:
    "node js es un entorno de desarrollo open source para javascript del lado del servidor el cual simula a un navegador mediante un servidor propio",
  tag: ["programacion", "backend"],
  date: new Date("2023-10-08"),
});

use("crud_react");
db.posts.aggregate([
  {
    $unwind: "$tag",
  },
  {
    $match: {
      tag: "backend",
    },
  },
  {
    $group: {
      _id: "$tag",
      count: {
        $sum: 1,
      },
    },
  },
  {
    $project: {
      _id: 0,
      tag: "$_id",
      count: 1,
    },
  },
]);

use("crud_react");
db.posts.find();
