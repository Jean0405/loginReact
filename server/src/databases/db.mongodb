use("crud_react");
db.createCollection("users", {
  validator: {
    $jsonSchema: {
      bsonType: "object",
      required: ["username", "email", "password"],
      properties: {
        id: {
          bsonType: "int",
        },
        username: {
          bsonType: "string",
          pattern: "^[a-zA-Z0-9 ]+$",
          maxLength: 20,
          description: "username is required",
        },
        email: {
          bsonType: "string",
          description: "email is required",
        },
        password: {
          bsonType: "string",
          maxLength: 20,
          description: "password is required",
        },
      },
    },
  },
});

//post collection
use("crud_react");
db.createCollection("posts", {
  validator: {
    $jsonSchema: {
      bsonType: "object",
      required: ["user", "title", "tag"],
      properties: {
        id: {
          bsonType: "int",
        },
        user: {
          bsonType: "object",
          required: ["id", "username", "email"],
          properties: {
            id: {
              bsonType: "int",
              description: "user id is required",
            },
            username: {
              bsonType: "string",
              description: "username is required",
            },
            email: {
              bsonType: "string",
              description: "email is required",
            },
          },
        },
        title: {
          bsonType: "string",
          description: "title is required",
        },
        content: {
          bsonType: "string",
          maxLength: 200,
          description: "content is required",
        },
        tag: {
          bsonType: "array",
          description: "at least one tag is required",
        },
      },
    },
  },
});

use("crud_react");
db.users.insertOne({
  id: 1,
  username: "Sevedol",
